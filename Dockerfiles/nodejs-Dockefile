FROM node:20-alpine AS builder

WORKDIR /app

ENV NODE_ENV=production
COPY package*.json ./

RUN npm install

COPY . .

RUN npm run build

FROM node:20-alpine

WORKDIR /app

COPY --from=builder /app/dist ./dist

USER nodejs 
EXPOSE 3500

HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 CMD [ "executable" ]

CMD [ "node", "dist/index.js" "server.js"]